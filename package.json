{
  "name": "lepikjs",
  "version": "1.1.20",
  "description": "Global Keyboard and Mouse Desktop Automation",
  "main": "./index.js",
  "scripts": {
    "build:ts": "cd ./src/ts && tsc",
    "dev": "cd ./src/ts && tsc -w",
    "build:py:win": "pyinstaller --onefile ./src/py/main.py --distpath ./build --workpath ./tmp -y",
    "build:py:unix": "node src/js/lib/unix.js",
    "build:py": "npm run build:py:win && npm run build:py:unix",
    "postinstall": "node src/js/lib/platform.js"
  },
  "keywords": [
    "mouse",
    "keyboard",
    "events",
    "globalevents",
    "desktop",
    "lepikjs",
    "autohotkey",
    "python",
    "automation",
    "lepikevents"
  ],
  "author": "borecjeborec1",
  "license": "MIT",
  "dependencies": {
    "eventemitter2": "^6.4.5",
    "lepikevents": "^1.4.3"
  }
}